{
  "extends": ["stylelint-config-recommended"],
  "rules": {
    "selector-type-no-unknown": [true, { "ignore": ["custom-elements", "default-namespace"] }],
    "unit-allowed-list": ["rem", "%", "s", "vh", "vw", "deg", "fr"],
    "value-no-vendor-prefix": [true, { "ignoreValues": ["box"] }],
    "property-no-vendor-prefix": [true, { "ignoreProperties": ["box-orient"] }]
  },
  "ignoreFiles": ["node_modules/**/*", "src/**/*.d.ts", "dist/**/*", "**/typings/**/*"]
}
